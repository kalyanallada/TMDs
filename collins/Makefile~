CC = gcc
FORTRAN = gfortran
CXX = g++

CXXFLAGS = -c -O2
CXXFLAGS += $(shell root-config --cflags)

LDFLAGS = -lgfortran -fopenmp
LDFLAGS += `root-config --libs --ldflags`  $(root-config --libs --ldflags) -lMathMore -lMinuit -lgsl -lMathCore -I/home/sun/Dropbox/BLNY_fit/hoppet-1.1.5/src
LIBS = -L/home/sun/Dropbox/BLNY_fit/hoppet-1.1.5/src -lhoppet_v1 

all: collins.exe

collins.exe: collins.o CT10Pdf.o fDSS.o
	$(CXX) $(LDFLAGS) -o collins.exe collins.o CT10Pdf.o fDSS.o DSSV-2008.o $(LIBS)

collins.o: collins.cxx
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -c collins.cxx

fDSS.o: fDSS.f
	gfortran -c fDSS.f -lgfortran

DSSV-2008.o: DSSV-2008.f
	gfortran -c DSSV-2008.f -lgfortran


CT10Pdf.o: CT10Pdf.f
	$(FORTRAN) -c CT10Pdf.f





